<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal">
    <ImageView 
        android:id="@+id/movies_list_img"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="2"
	    android:layout_gravity="center_vertical"
	    android:adjustViewBounds="true"
        />
    <LinearLayout 
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_marginLeft="10dp"
		android:orientation="vertical"
		android:layout_gravity="center_vertical"
        >
        <TextView 
            android:id="@+id/movies_list_name"
            android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="18sp"
            />
		<LinearLayout 
		    android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:orientation="horizontal"
			android:gravity="center_vertical"
		    >
		    <ImageView
		        android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/ic_crown"
				android:layout_weight="10"
		        />
		    <TextView
	            android:id="@+id/movies_list_point"
	            android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="7dp"
				android:layout_weight="1"
	            />
		</LinearLayout>
	    <LinearLayout 
		    android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:orientation="horizontal"
		    >
		    <TextView 
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="已售："
		        />
			<TextView 
			    android:id="@+id/movies_list_sale_account"
	            android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="#70ff0000"
	            />
		</LinearLayout>
        <TextView 
            android:id="@+id/movies_list_type"
            android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
            />
        <LinearLayout 
		    android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:orientation="horizontal"
		    >
		    <TextView 
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="导演："
				android:textStyle="bold"
		        />
			<TextView 
			    android:id="@+id/movies_list_director"
	            android:layout_width="match_parent"
				android:layout_height="wrap_content"
	            />
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:orientation="horizontal"
		    >
			<TextView 
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="演员："
				android:textStyle="bold"
		        />
	        <TextView 
	            android:id="@+id/movies_list_actors"
	            android:layout_width="match_parent"
				android:layout_height="wrap_content"
	            />
	    </LinearLayout>
    </LinearLayout>
</LinearLayout>
