<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">"
    <TextView
	    android:id="@+id/reservation_list_time"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="13sp"
		android:textColor="#A7A7A7"
		android:text="20.16-05-30 17:00:00"
	    />
    <LinearLayout 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dp"
    	android:orientation="horizontal"
    	android:gravity="center_vertical"
        >
        <TextView 
            android:id="@+id/reservation_list_movie_name"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="美国队长3"
    		android:textSize="18sp"
    		android:textColor="#f0000000"
            />
        <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="20dp"
    		android:textSize="13sp"
    		android:text="X "
            />
        <TextView 
            android:id="@+id/reservation_list_quantity"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textSize="13sp"
    		android:text="2"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:orientation="horizontal"
        >
        <TextView 
	        android:id="@+id/reservation_list_cinema_name"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="15sp"
			android:text="正佳飞扬电影城"
			android:textColor="#404040"
	        />
        <TextView 
	        android:id="@+id/reservation_list_screening_room_name"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:textSize="13sp"
			android:textColor="#A7A7A7"
			android:text="A"
	        />
        <TextView 
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="13sp"
			android:textColor="#A7A7A7"
			android:text="厅"
	        />
    </LinearLayout>
	    
	<TextView 
        android:id="@+id/reservation_list_seat"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:textSize="14sp"
		android:text="7排5号\n7排6号"
		android:textColor="#A3A3A3"
        />
	        
        
	        
    

    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="horizontal"
    	android:layout_marginTop="10dp"
    	android:gravity="right"
        >
        <TextView
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="实付"
    		android:textSize="15sp"
    		android:textColor="#303030"
    		android:layout_gravity="center_vertical"
            />
        <ImageView 
            android:layout_width="12dp"
    		android:layout_height="wrap_content"
    		android:adjustViewBounds="true"
    		android:src="@drawable/ic_rmb_black"
    		android:layout_gravity="center_vertical"
    		android:layout_marginRight="3dp"
    		android:layout_marginLeft="3dp"
            />
        <TextView
            android:id="@+id/reservation_list_price"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="100"
    		android:textSize="18sp"
    		android:textColor="#e00000"
    		android:layout_gravity="center_vertical"
            />
    </LinearLayout>
</LinearLayout>
